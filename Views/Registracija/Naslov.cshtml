@model DSR_KAZAR_N1.Models.page2Model

@{
    ViewData["Title"] = "Naslov";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Naslov">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="post" class="control-label"></label>
                <input asp-for="post" class="form-control" />
                <span asp-validation-for="post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="postnum" class="control-label"></label>
                <input asp-for="postnum" class="form-control" />
                <span asp-validation-for="postnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="country" class="control-label"></label>
                <input asp-for="country" class="form-control" />
                <span asp-validation-for="country" class="text-danger"></span>
            </div>

            <br>
            <div class="form-group">
                <input type="submit" value="Naslednji korak" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-controller="Home" asp-action="Index">Na domačo stran</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
