@model DSR_KAZAR_N1.Models.UporabnikModel


<hr />
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surname" class="control-label"></label>
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birthdate" class="control-label"></label>
            <input autocomplete="off" type="text" id="datepicker" asp-for="birthdate" class="form-control" />
                <span asp-validation-for="birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birthplace" class="control-label"></label>
            @Html.DropDownListFor(m => m.birthplace, new SelectList(new List<string> { "Ljubljana", "Maribor", "Murska Sobota", "Celje", "Portorož", "New York" }), "Select location", new { @class = "form-control" })
        </div>
            <div class="form-group">
                <label asp-for="emso" class="control-label"></label>
                <input asp-for="emso" class="form-control" />
                <span asp-validation-for="emso" class="text-danger"></span>
            </div>
            <br>           
    </div>
</div>
<br>
<div>
    <a asp-controller="Home" asp-action="Index">Na domačo stran</a>
</div>
