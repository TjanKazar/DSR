@model DSR_KAZAR_N1.Models.page3Model

@{
    ViewData["Title"] = "Zakljuci";
}

<h1>@ViewData["Title"]</h1>
<h4>UporabnikModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Zakljuci">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" type="password" class="form-control" />
                <span asp-validation-for="password"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password2" class="control-label"></label>
                <input asp-for="password2" type="password" class="form-control" />
                <span asp-validation-for="password2" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Končaj z registracijo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-controller="Home" asp-action="Index">Na domačo stran</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}