@{
    if(TempData.Peek("address") == null || TempData.Peek("postnum") == null || TempData.Peek("post") == null || TempData.Peek("country") == null)
    {
        Context.Response.Redirect("/Registracija");
    }
    ViewData["Title"] = "Zaključi";
}
<h1>@ViewData["Title"]</h1>

<h1>@TempData.Peek("address") @TempData.Peek("postnum") @TempData.Peek("post") @TempData.Peek("country")</h1>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0">User Registration Form</h2>
        </div>
        <div class="card-body">
            <form id="zakljuci-form" action="novUporabnik" method="post">
                <div id="error-message-pass" style="color: red; display: none;">Gesli se ne ujemata.</div>

                <div class="form-group">
                    <label for="email">E-poštni naslov:</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="pass1">Ustvari geslo:</label>
                    <input type="password" id="pass1" name="pass1" class="form-control" required>
                </div>               
                <div class="form-group">
                    <label for="pass2">ponovi geslo:</label>
                    <input type="password" id="pass2" name="pass2" class="form-control" required>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Next step</button>
            </form>
        </div>
    </div>
</div>