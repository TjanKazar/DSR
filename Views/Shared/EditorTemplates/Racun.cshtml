@model DSR_KAZAR_N1.Models.Racun

<h4>Racun</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RacunPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="datumIzdaje" class="control-label"></label>
                <input asp-for="datumIzdaje" class="form-control" />
                <span asp-validation-for="datumIzdaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cenaSkupaj" class="control-label"></label>
                @Html.EditorFor(model => model.cenaSkupaj, "Double", "cenaSkupaj")
                <span asp-validation-for="cenaSkupaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>